<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create-categories" author="anton">
        <createTable tableName="categories">
            <column name="categoryid" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="init-categories" author="anton">
        <insert tableName="categories">
            <column name="name" value="Fertilizer"/>
        </insert>
        <insert tableName="categories">
            <column name="name" value="Protective products and septic tanks"/>
        </insert>
        <insert tableName="categories">
            <column name="name" value="Planting material"/>
        </insert>
        <insert tableName="categories">
            <column name="name" value="Tools and equipment"/>
        </insert>
        <insert tableName="categories">
            <column name="name" value="Pots and planters"/>
        </insert>
    </changeSet>

</databaseChangeLog>
